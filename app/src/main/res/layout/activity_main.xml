<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".MainActivity">


        <EditText
            android:id="@+id/campoCodigoPostal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="30dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/codigo_postal"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="@+id/campoEstado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/campoEstado"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoAnioTarjeta"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginBottom="120dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/a_o"
            android:inputType="textPersonName"
            android:maxLength="4"
            app:layout_constraintBottom_toTopOf="@+id/campoCiudad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoCodigoTarjeta"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginEnd="2dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/codigo"
            android:inputType="textPersonName"
            android:maxLength="3"
            app:layout_constraintBottom_toBottomOf="@+id/campoAnioTarjeta"
            app:layout_constraintEnd_toEndOf="@+id/campoNumeroTarjeta"
            app:layout_constraintTop_toTopOf="@+id/campoAnioTarjeta"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/campoCiudad"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="129dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/ciudad"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/campoEstado"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="59dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/estado"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/campoAnioTarjeta"
            app:layout_constraintStart_toStartOf="@+id/campoCiudad"
            app:layout_constraintTop_toTopOf="@+id/campoCiudad"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoCalleNumero"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="14dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/calle_y_numero"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/campoCiudad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/informacion_de_la_tarjeta_de_cr_dito"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="@string/direccion"
            app:layout_constraintStart_toStartOf="@+id/campoCalleNumero"
            app:layout_constraintTop_toBottomOf="@+id/campoMesTarjeta"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoNumeroTarjeta"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="70dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/numero_de_tarjeta"
            android:inputType="textPersonName"
            android:maxLength="16"
            app:layout_constraintBottom_toBottomOf="@+id/campoCodigoTarjeta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/campoApellido"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoMesTarjeta"
            android:layout_width="92dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/mes"
            android:inputType="textPersonName"
            android:maxLength="2"
            app:layout_constraintBottom_toBottomOf="@+id/campoAnioTarjeta"
            app:layout_constraintStart_toStartOf="@+id/campoNumeroTarjeta"
            app:layout_constraintTop_toTopOf="@+id/campoAnioTarjeta"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="HardcodedText,MissingConstraints" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:text="@string/guardar"
            app:layout_constraintEnd_toEndOf="@+id/campoNombre"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoNombre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="14dp"
            android:autofillHints="Nombre"
            android:ems="10"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/campoApellido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campoApellido"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="82dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/apellido"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/campoCodigoTarjeta"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button2"
            android:layout_width="133dp"
            android:layout_height="59dp"
            android:text="Registrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.102"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campoEstado"
            app:layout_constraintVertical_bias="1.0"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="133dp"
            android:layout_height="59dp"
            android:layout_marginTop="57dp"
            android:text="Buscar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintTop_toTopOf="@+id/campoCodigoPostal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>






